<h1>Edit Story</h1>

<form action="/stories/{{story.id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <div class="row">
    <div class="form-group" style="width:80%;">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{story.title}}">
      <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
  </div>

  <div class="row">
    <div class="form-group" style="width:80%;">
      <label for="status">Status</label>
      <select class="form-control" name="status">
          {{#select story.status}}
              <option value="public">Public</option>
              <option value="private">Private</option>
              <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
    </div>
  </div>

  <div class="row">
    <div class="form-check" style="width:80%;">
      <input type="checkbox" class="form-check-input" name="allowComments" {{#if story.allowComments}} checked="checked" {{/if}}>
      <label class="form-check-label" for="allowComments">Allow Comments</label>
    </div>
  </div>

  <br />


  <div class="row">
    <div class="form-group" style="width:80%;">
      <h6>Tell Us Your Story :</h6>
      <textarea class="form-control" name="body" rows="10" cols="90">{{story.body}}</textarea>
      <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
  </div>


  <button type="submit" class="btn btn-primary">Save</button>

</form>
